<div class="container">
	<div class="row justify-content-md-center align-items-center">
	<div class="row justify-content-md-center align-items-center pb-5"><h1 class="h1 text-white">BIENVENIDO AL SISTEMA AWIC</h1></div>
        <div class="col-md-10 align-item-center">
		<div class="card text-center">
			<div class="card-header">
				<h3>Agregar Administrador</h3>
			</div>
			<div class="card-body bg-aqua justify-content-center">
				<form method="POST" action="store" accept-charset="UTF-8" role="form" id="crearadmin" name="crearadmin" enctype="multipart/form-data">
                <!-- Protección CSRF -->
                <%= token_tag nil %>
					<div class="row">
                        <div class="col-md-4 input-group form-group">
					        <input type="text" class="form-control" placeholder="Nombre (s)" name="nombre" id="nombre" required>
					    </div>
					    <div class="col-md-4 input-group form-group">
					        <input type="text" class="form-control" placeholder="Apellido Paterno" name="app" id="app" required>
					    </div>
                        <div class="col-md-4 input-group form-group">
					        <input type="text" class="form-control" placeholder="Apellido Materno" name="apm" id="apm" required>
					    </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 input-group form-group">
					        <input type="number" class="form-control" placeholder="Edad" name="edad" id="edad" required>
					    </div>
					    <div class="col-md-4 input-group form-group">
					        <select type="select" class="form-control" name="sexo" id="sexo" required>
                                <option value="" selected>Seleccione un Género</option>
                                <option value="H">Hombre</option>
                                <option value="M">Mujer</option>
                            </select>
					    </div>
                        <div class="col-md-4 input-group form-group">
					        <input type="text" class="form-control" placeholder="Puesto" name="puesto" id="puesto" required>
					    </div>
                    </div>
					<div class="row">
                        <div class="col-md-4 input-group form-group">
						    <input type="text" class="form-control" placeholder="Correo Electrónico" name="email" id="email" required>
					    </div>
					    <div class="col-md-4 input-group form-group">
						    <input type="password" class="form-control" placeholder="Contraseña" name="password" id="password" required>
					    </div>
						<div class="col-md-4 input-group form-group">
						    <input type="password" class="form-control" placeholder="Confirmar Contraseña" name="confirmPass" id="confirmPass" required>
					    </div>
                    </div>
					<div class="form-group d-inline-flex mt-3">
                        <button type="submit" class="btn btn-light">Registrar Administrador</button>
					</div>
				</form>
			</div>
		</div>
	</div>
    </div>
</div>