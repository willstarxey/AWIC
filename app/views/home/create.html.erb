<div class="container">
	<div class="row justify-content-md-center align-items-center">
        <div class="col-md-10 align-item-center">
		<div class="card text-center">
			<div class="card-header">
				<h3>Agregar Administrador</h3>
			</div>
			<div class="card-body bg-aqua justify-content-center">
				<form>
                <div class="row">
                        <div class="col-md-4 input-group form-group">
					        <input type="text" class="form-control" placeholder="Nombre (s)">
					    </div>
					    <div class="col-md-4 input-group form-group">
					        <input type="text" class="form-control" placeholder="Apellido Paterno">
					    </div>
                        <div class="col-md-4 input-group form-group">
					        <input type="text" class="form-control" placeholder="Apellido Materno">
					    </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 input-group form-group">
					        <input type="number" class="form-control" placeholder="Edad">
					    </div>
					    <div class="col-md-4 input-group form-group">
					        <select type="select" class="form-control" id="sexo" name="sexo">
                                <option value="null">Seleccione una Opción</option>
                                <option value="H">Hombre</option>
                                <option value="M">Mujer</option>
                            </select>
					    </div>
                        <div class="col-md-4 input-group form-group">
					        <input type="text" class="form-control" placeholder="Puesto">
					    </div>
                    </div>
					<div class="row">
                        <div class="col-md-6 input-group form-group">
						    <input type="text" class="form-control" placeholder="Correo Electrónico">
					    </div>
					    <div class="col-md-6 input-group form-group">
						    <input type="password" class="form-control" placeholder="Contraseña">
					    </div>
                    </div>
					<div class="form-group bg-white d-inline-flex mt-3">
						<input type="submit" value="Registrar" class="btn">
					</div>
				</form>
			</div>
		</div>
	</div>
    </div>
</div>