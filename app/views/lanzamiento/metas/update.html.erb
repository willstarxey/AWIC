                        <!-- Protecci贸n CSRF -->
                        <%= token_tag nil %>
                        <div class="row">
                            <div class="col-md-2">
                                <label class="text-white">Descripci贸n</label>
                            </div>
                            <div class="col-md-10 input-group form-group">
                                <textarea type="text" class="form-control" placeholder="Descripci贸n" id="descripcion" name="descripcion" required><%= meta.descripcion %></textarea>
