<div class="container">
    <h2 class="h2 text-white text-center"><%=Proyecto.find(params[:proyecto_id]).nombre%></h2>
    <br>
    <div class="container">
        <div class="row justify-content-md-center align-items-center">
            <div class="col-md-10 align-item-center">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Lanzamiento  : :  Personal | Agregar Usuario</h3>
                </div>
                <div class="card-body bg-aqua justify-content-center">
                    <form method="POST" action="store" accept-charset="UTF-8" role="form" id="agregarusuarioproyecto" name="agregarusuarioproyecto" enctype="multipart/form-data"> 
                        <!-- Protección CSRF -->
                        <%= token_tag nil %>
                        <div class="row">
                            <div class="col-md-12">
                                <input type="hidden" id="proyecto_id" name="proyecto_id" value="<%=params[:proyecto_id]%>">
                                <label class="text-white">Selecciona el usuario a agregar al proyecto</label>
                            </div>
                        </div>
                        <div class="row align-items-center justify-content-center">
                            <div class="col-md-10 input-group form-group">
                                <select type="select" class="form-control" name="user_id" id="user_id" required>
                                    <option value="" selected>Seleccione una Opción</option>
                                    <% @users.each do |user| %>
                                        <option value="<%=user.id%>"><b><%=user.id%> | <%=user.nombre%> <%=user.app%> <%=user.apm%></b> | <%=user.puesto%></option>
                                    <% end %>
                                </select>
                            </div>
                        </div>
                        <div class="form-group d-inline-flex mt-3">
                            <button type="submit" class="btn btn-light">Agregar al Proyecto</button>
                        </div>
                        <div class="form-group d-inline-flex mt-3">
                            <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>