<!DOCTYPE html>
<html>
  <head>
    <title>Aplicación Web de Integración Continua - TSP Pruebas</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container-fluid">
    <div class="row">
      <div class="col-md-1 bg-aqua">
      </div>
      <div class="col-md-11 p-5 bg-image-main full-size">
          <div class="pb-5">
            <%= link_to root_path do %>
              <%= image_tag("AWIC-TSP (1).png", :alt => "AWIC-TSP", :width => '20%')%>
            <% end %>
          </div>
         <!-- Mensajes -->
            <% flash.each do |type, msg| %>
              <div class="alert alert-info">
                <%= msg %>
              </div>
            <% end %>
            <%= yield %>
      </div>
    </div>
    <footer class="row bg-grey-alt py-3">
      <div></div>
    </footer>
  </body>
</html>
