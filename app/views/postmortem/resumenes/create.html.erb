<div class="container-fluid">
    <h2 class="h2 text-white text-center"><%=Proyecto.find(params[:proyecto_id]).nombre%></h2>
    <br>
    <div class="container-fluid">
        <div class="row justify-content-md-center align-items-center">
            <div class="col-md-10 align-item-center">
                <div class="card text-center mb-5">
                    <div class="card-header">
                        <h3>Postmortem : : Resumenes | Crear Resumen</h3>
                    </div>
                    <div class="card-body bg-aqua justify-content-center">
                        <form method="POST" action="store" accept-charset="UTF-8" role="form" id="crearprueba"
                            name="crearprueba" enctype="multipart/form-data">
                            <!-- Protección CSRF -->
                            <%= token_tag nil %>
                            <div class="row">
                                <div class="col-md-2">
                                    <input type="hidden" id="proyecto_id" name="proyecto_id" value="<%=@proyecto.id%>">
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-2">
                                    <label class="text-white">Seleccione el ciclo: </label>
                                    <select type="select" class="form-control" name="ciclo" id="ciclo" required>
                                        <option value="0" selected>Ciclos</option>
                                        <% for i in(1..@proyecto.n_ciclos) %>
                                            <option value="<%=i%>">Ciclo <%=i%></option>
                                        <% end %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group d-inline-flex mt-3">
                                <button type="submit" class="btn btn-light" data-confirm="¿Está seguro de generar el resumen?" data-title="Generar Resumen" data-commit="Generar" data-cancel="Cancelar">Guardar</button>
                            </div>
                            <div class="form-group d-inline-flex mt-3">
                                <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>