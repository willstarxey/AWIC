<div class="container">
    <h2 class="h2 text-white text-center"><%=Proyecto.find(params[:proyecto_id]).nombre%></h2>
    <br>
    <div class="container">
        <div class="row justify-content-md-center align-items-center">
            <div class="col-md-10 align-item-center">
                <div class="card text-center mb-5">
                    <div class="card-header">
                        <h3>Postmortem : : Resumenes | Resumen Completo del Ciclo <%=@resumen.first.ciclo%></h3>
                    </div>
                    <div class="card-body bg-aqua justify-content-center">
                        <% @resumen.each do |resumen| %>
                        <form method="POST" action="edit/<%= resumen.id %>" accept-charset="UTF-8" role="form"
                            id="crearestandar" name="crearestandar" enctype="multipart/form-data">
                            <!-- Protección CSRF -->
                            <%= token_tag nil %>
                            <div class="row">
                                <div class="col-md-2">
                                    <input type="hidden" id="proyecto_id" name="proyecto_id"
                                        value="<%=params[:proyecto_id]%>">
                                    <label class="text-white">Ciclo <%=resumen.ciclo%></label>
                                </div>
                                <div class="col-md-10 input-group form-group">
                                    <textarea type="text" class="form-control" placeholder="Detalles" id="detalles"
                                        name="detalles" required><%=resumen.detalles%></textarea>
                                </div>
                            </div>
                            <hr class="my-1" color="#FFFFFF">
                            <h5 class="mt-3 text-white">Características no implementadas en el proyecto</h5>
                            <div class="row justify-content-md-center mt-5">
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Lanzamiento | Metas</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.lanzamiento_metas.each do |meta|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=meta['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Estrategia | Diseños</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.estrategia_disenos.each do |diseno|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=diseno['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Estrategia | Criterios</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.estrategia_criterios.each do |criterio|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=criterio['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-md-center mt-3">
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Estrategia | Estimaciones</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.estrategia_estimaciones.each do |estimacion|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=estimacion['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Planeación | Planes de Calidad</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.planeacion_planes_calidad.each do |plan_calidad|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=plan_calidad['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Requerimientos | Requerimientos</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.requerimientos_requerimientos.each do |requerimiento|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=requerimiento['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-md-center mt-5">
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Diseño | Estructuras</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.diseno_estructuras.each do |estructura|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=estructura['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Diseño | Planes de Pruebas</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.diseno_planes_pruebas.each do |plan_pruebas|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=plan_pruebas['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Diseño | Estándares</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.diseno_estandares.each do |estandar|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=estandar['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-md-center mt-3">
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Implementación | Criterios de Calidad</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="p-0 m-0">
                                                <% resumen.implementacion_criterios_calidad.each do |criterio_calidad|%>
                                                <div class="row justify-content-center align-items-center">
                                                    [<div class="spinner-grow spinner-grow-sm text-danger" role="status">
                                                    </div>]
                                                    <p class="pt-3">&nbsp;<%=criterio_calidad['descripcion']%></p>
                                                </div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group d-inline-flex mt-3">
                                <button type="submit" class="btn btn-light">Guardar</button>
                            </div>
                            <div class="form-group d-inline-flex mt-3">
                                <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
                            </div>
                        </form>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>