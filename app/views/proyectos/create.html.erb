<div class="container">
	<div class="row justify-content-md-center align-items-center">
        <div class="col-md-10 align-item-center">
		<div class="card text-center">
			<div class="card-header">
				<h3>Agregar Proyecto</h3>
			</div>
			<div class="card-body bg-aqua justify-content-center">
                <form method="POST" action="store" accept-charset="UTF-8" role="form" id="crearproyecto" name="crearproyecto" enctype="multipart/form-data">
                <!-- Protección CSRF -->
                <%= token_tag nil %>
                    <div class="row">
                        <div class="col-md-12 input-group form-group">
					        <input type="text" class="form-control" placeholder="Nombre del Proyecto" id="nombre" name="nombre" required>
					    </div>
                    </div>
                    <div class="row">
					    <div class="col-md-12 input-group form-group">
					        <select type="select" class="form-control" name="user_id" id="user_id" required>
                                <option value="" selected>Seleccione el Líder del Proyecto</option>
                                <% User.where(role_id: "3").each do |user| %>
                                    <option value="<%=user.id%>"><%=user.nombre%> <%=user.app%> <%=user.apm%> - <%=user.puesto%></option>
                                <% end %>
                            </select>
					    </div>
                    </div>
					<div class="form-group d-inline-flex mt-3">
                        <button type="submit" class="btn btn-light">Guardar</button>
					</div>
                    <div class="form-group d-inline-flex mt-3">
                        <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
					</div>
                </form>
			</div>
		</div>
	</div>
    </div>
</div>