<div class="container">
    <h2 class="h2 text-white text-center"><%=Proyecto.find(params[:proyecto_id]).nombre%></h2>
    <br>
    <div class="container">
        <div class="row justify-content-md-center align-items-center">
            <div class="col-md-10 align-item-center">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Pruebas  : :  Pruebas | Actualizar Prueba</h3>
                </div>
                <div class="card-body bg-aqua justify-content-center">
                <% @prueba.each do |prueba| %>
                    <form method="POST" action="store" accept-charset="UTF-8" role="form" id="actualizarprueba" name="actualizarprueba" enctype="multipart/form-data"> 
                        <!-- Protección CSRF -->
                        <%= token_tag nil %>
                        <div class="row">
                            <div class="col-md-2">
                                <label class="text-white">Nombre</label>
                            </div>
                            <div class="col-md-10 input-group form-group">
                                <input type="text" class="form-control" placeholder="Nombre" id="nombre" name="nombre" required value="<%=prueba.tiempo%>">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label class="text-white">Descripción</label>
                            </div>
                            <div class="col-md-10 input-group form-group">
                                <textarea type="text" class="form-control" placeholder="Descripción" id="descripcion" name="descripcion" required><%=prueba.descripcion%></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label class="text-white">Datos de Entrada</label>
                            </div>
                            <div class="col-md-10 input-group form-group">
                                <textarea type="text" class="form-control" placeholder="Datos de Entrada" id="entrada" name="entrada" required><<%=prueba.entrada%>/textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label class="text-white">Resultado Obtenido</label>
                            </div>
                            <div class="col-md-10 input-group form-group">
                                <textarea type="text" class="form-control" placeholder="Resultado Obtenido" id="r_obtenido" name="r_obtenido" required><%=prueba.r_obtenido%></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label class="text-white">Resultado Deseado</label>
                            </div>
                            <div class="col-md-10 input-group form-group">
                                <textarea type="text" class="form-control" placeholder="Resultado Deseado" id="r_deseado" name="r_deseado" required><%=prueba.r_deseado%></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label class="text-white">Resultado Deseado</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="cumple">
                                <% if prueba.cumple %>
                                    <label class="form-check-label" for="cumple" checked>¿La prueba se cumplió correctamente?</label>
                                <%  else %>
                                    <label class="form-check-label" for="cumple" checked>¿La prueba se cumplió correctamente?</label>
                                <%end%>
                            </div>
                        </div>
                        <div class="form-group d-inline-flex mt-3">
                            <button type="submit" class="btn btn-light">Guardar</button>
                        </div>
                        <div class="form-group d-inline-flex mt-3">
                            <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
                        </div>
                    </form>
                    </div>
                    <%end%>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>